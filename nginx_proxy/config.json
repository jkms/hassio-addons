{
  "name": "Nginx Proxy",
  "version": "0.1.14",
  "slug": "nginx_proxy",
  "description": "Nginx Proxy for multiple VHOSTS",
  "url": "https://github.com/bestlibre/hassio-addons/tree/master/nginx_proxy",
  "startup": "system",
  "boot": "auto",
  "image": "bestlibre/{arch}-nginx-proxy",
  "options": {
    "vhosts":[
      {"vhost": "homeassistant.domain.tld",
       "port": "8123",
       "default_server": true}
    ]
  },
  "schema": {
    "vhosts": [
      {"vhost": "str",
       "remote": "str?",
       "remote_ssl": "bool?",
       "port": "str",
       "default_server": "bool?",
       "certname": "str?",
       "ssl_modern": "bool?",
       "auth": "str?",
       "max_body_size": "str?",
       "x-ha-access": "str?"
      }
    ]
  },
  "ports": {"80/tcp": 80, "443/tcp": 443},
  "map": ["ssl"],
  "arch": ["armv7", "armhf", "amd64", "aarch64", "i386"]
}
